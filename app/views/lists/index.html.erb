<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Discover fabulous forgotten films</strong>!</h1>
    <p>Change your way of life showing films</p>
  </div>
</div>
<div class='d-flex'>
  <h1>My Lists</h1>
  <%= link_to 'Create a movie list', new_list_path , class: 'btn btn-primary' %>
</div>
<div class='d-flex'>
  <% @lists.each do |list| %>
    <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to list.name, list_path(list) %>
    </div>
  <% end %>
</div>
